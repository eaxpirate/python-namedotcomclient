# a.print_records("niko.im")
# 
def main():

    if len(argv) <= 1:
        usage()

    try:
        opts,args = getopt(
            argv[1:], "h",
            [
                "help",
                "list-domains", 
                "list-records=",
                "create-record=",
                "delete-record="
            ]
        )
    except GetoptError as e:
        print(e)
        usage()

    if not opts:
        usage()

    api_handler = Namedotcom()
    for opt, arg in opts:
        if opt in ("-h","--help"):
            usage()
        elif opt in ("--list-domains"):
            api_handler.print_domains()
        elif opt in ("--list-records"):
            api_handler.print_records(arg)
        elif opt in ("--create-record"):
            print("Not implemented")
            exit(1)
            # hostname, domain, ip, recType = arg.split(',')
            # createRecord(hostname, domain, ip, recType)
        elif opt in ("--delete-record"):
            print("Not implemented")
            exit(1)
            # domain,recId = arg.split(',')
            # deleteRecord(domain, recId)
        else:
            usage()

if __name__ == "__main__":
    main()
